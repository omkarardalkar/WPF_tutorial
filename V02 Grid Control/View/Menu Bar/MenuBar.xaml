<UserControl x:Class="V02_Grid_Control.View.Menu_Bar.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:V02_Grid_Control.View.Menu_Bar"
             mc:Ignorable="d" 
             Height="25" d:DesignWidth="800">
    <Grid>
        <Menu>
            <MenuItem Header="File" FontSize="16">
                <MenuItem Header="New" FontSize="14"/>
                <MenuItem Header="Open" FontSize="14"/>
                <MenuItem Header="Save" FontSize="14"/>
                <MenuItem Header="Exit" FontSize="14"/>
            </MenuItem>
            <MenuItem Header="Edit" FontSize="16"/>
            <MenuItem Header="View" FontSize="16"/>
            <MenuItem Header="Help" FontSize="16"/>
        </Menu>
            
    </Grid>
</UserControl>
