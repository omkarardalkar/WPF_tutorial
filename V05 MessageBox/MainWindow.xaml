<Window x:Class="V05_MessageBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:V05_MessageBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Name="btnInput" Width="100" Height="50" Content="Click Me" FontSize="20" FontWeight="Bold" Click="btnInput_Click"/>
        <TextBlock Grid.Row="1" Name="tbResult" Width="250" Height="50" FontSize="20" FontWeight="Bold"/>

    </Grid>
</Window>
